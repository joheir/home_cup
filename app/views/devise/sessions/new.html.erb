<% @disable_nav = true %>
<% @disable_log_out = true %>
<h1 class="login-text">Login</h1>

<div class="login-wrapper">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
    data: {turbo: false}) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn-signuplogin-page" %>
       <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
         <h4>OR </h4><%= link_to "Sign up", new_registration_path(resource_name)%><br />
      <% end %>
    </div>
    <div>
       <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
         <%= link_to "Forgot your password?", new_password_path(resource_name), class:"forgot-pass" %><br />
       <% end %>
    </div>
  <% end %>
</div>
