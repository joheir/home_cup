<h2>Meal Options</h2>

<% if @profile.admin? %>
  <%= link_to "Search new meals", search_profile_meals_path(@profile) %>
<% end %>

<% if @profile.admin? %>
  <%= link_to "Remove selected meals", destroy_all_meals_path, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "del-items" %>
<% end %>

<div class="container text-center card-wrapper">
   <% @meals.each do |meal| %>
      <div class="card" style="width: 10rem;">
      <img src="<%= meal.picture_url %>" class="card-img-top" alt="...">
      <div class="card-body">
        <p class="card-text"><%= meal.name %></p>
         <div class="like-link">
          <%= render 'meals/like_link', meal: meal %>
        </div>
      </div>
    </div>
  <% end %>
</div>


